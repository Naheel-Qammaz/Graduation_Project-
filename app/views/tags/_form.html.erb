<%= form_with(model: tag) do |form| %>
  <% if tag.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(tag.errors.count, "error") %> prohibited this tag from being saved:</h2>

      <ul>
        <% tag.errors.each do |error| %>
         <li data-e2e="form-error-message">
          <%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name , data: { e2e: "tag-name-input" }%>
  </div>

  <div>
    <%= form.submit data: { e2e: tag.new_record? ? "submit-create-tag" : "submit-update-tag" } %>
  </div>
<% end %>
