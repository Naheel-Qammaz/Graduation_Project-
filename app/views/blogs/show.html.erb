<p style="color: green"><%= notice %></p>

<%= render @blog %>

<div>
  <% if @current_user.id == @blog.user_id %>
    <%= link_to "Edit this blog", edit_blog_path(@blog), data: { e2e: "edit-blog-button"} %>
  <%= button_to "Destroy this blog", @blog, method: :delete, data: { e2e: "destroy-blog-button", turbo_method: :delete, turbo_confirm: 'Are you sure?' } %>  <% end %>
  <br/>
  <%= link_to "Back to blogs", blogs_path %>

</div>
